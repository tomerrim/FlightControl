@model IEnumerable<LoggerDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Loggers</h1>
    <table id="loggersTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Leg</th>
                <th>Flight</th>
                <th>In</th>
                <th>Out</th>
            </tr>
        </thead>
        <tbody id="flightsTableBody" class="overflow-auto" style="height:600px">
            @foreach (var log in Model.Reverse())
            {
                <tr>
                    <td>@log.Leg?.Id</td>
                    <td>@log.Flight?.Id</td>
                    <td>@log.In</td>
                    <td>@log.Out</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.6/signalr.min.js"></script>
    <script type="module" src="~/js/Flights.js"></script>
}